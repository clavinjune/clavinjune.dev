@import "https://fonts.googleapis.com/css2?family=Noto+Sans+JP&display=swap";body,html{margin:0;padding:0;color:#ec5f5f;font-family:noto sans jp,sans-serif}a{color:inherit;cursor:pointer;text-decoration:none}nav{align-items:center;color:rgba(51,51,51,.4);display:grid;font-size:16px;line-height:16px;font-weight:bolder;height:70px;justify-content:center;width:100%}nav>ul{display:grid;grid-template-columns:1fr 1fr 1fr 1fr;margin:0;padding:0;width:240px}nav>ul>li{display:grid;justify-content:center;list-style:none}nav>ul>li>a.active{color:#333}nav>ul>li>a:not(.active):hover{color:rgba(51,51,51,.8)}footer{align-items:center;color:rgba(51,51,51,.4);display:grid;font-size:16px;height:60px;justify-content:right;width:95%}@media only screen and (max-width:480px){footer{justify-content:center;width:100%}}